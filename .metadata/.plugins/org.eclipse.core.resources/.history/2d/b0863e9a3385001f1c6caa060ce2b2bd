package com.amazon.page;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.Assert;
import org.testng.annotations.AfterClass;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.Test;

public class VerifyAmazonPage {
    private WebDriver driver;

    @BeforeClass
    public void setup() {
        // Set the path for the WebDriver executable
        System.setProperty("webdriver.chrome.driver", "path/to/chromedriver"); // Update the path
        
        // Initialize the driver
        driver = new ChromeDriver();  // Assign the ChromeDriver instance to the class-level driver
        driver.manage().window().maximize();
    }

    @Test
    public void testAmazonTitle() {
        driver.get("https://www.amazon.in");
        String title = driver.getTitle();
        Assert.assertTrue(title.contains("Amazon"), "Title does not contain 'Amazon'");
    }

    @AfterClass
    public void tearDown() {
        if (driver != null) {
            driver.quit();
        }
    }
}
